<categories>

	<category name="cleaning supplies" defaultLocation="side table" room="bedroom">
		<object name="bleach"   type="known" difficulty="high" />
		<object name="dishwasher tab"   type="known" difficulty="high" />
	</category>

	<category name="containers" defaultLocation="side table" room="living room">
		<object name="tray"     type="special" difficulty="high"      canPlaceOn="true" twoHands="true"  />
		<object name="basket"   type="special" difficulty="high"      canPlaceIn="true" twoHands="true"  />
		<object name="bag"      type="special" difficulty="easy"      canPlaceIn="true"                  />
	</category>

	<category name="cutlery"    defaultLocation="ikea table" room="living room">
		<object name="fork"     type="known" difficulty="high" />
		<object name="knife"    type="known" difficulty="high" />
		<object name="spoon"    type="known" difficulty="high" />
		<object name="plate"     type="known" difficulty="moderate" canPlaceOn="true" />
		<object name="bowl"     type="known" difficulty="moderate" canPourIn="true"  />
		<object name="cup"    type="known" difficulty="moderate" canPourIn="true"  />
	</category>

	<category name="drinks"         defaultLocation="side table" room="kitchen">
		<object name="milk"            type="known" difficulty="easy" canPour="true" />
		<object name="coke"            type="known" difficulty="easy" canPour="false" />
		<object name="milo"            type="known" difficulty="easy" canPour="false" />
	</category>

	<category name="fruits"     defaultLocation="side table" room="living room">
		<object name="banana"    type="alike" difficulty="moderate" />
		<object name="pear"   type="alike" difficulty="moderate" />
		<object name="orange"  type="alike" difficulty="moderate" />
		<object name="peach"  type="alike" difficulty="moderate" />
	</category>

	<category name="pantry items"         defaultLocation="side table" room="living room">
		<object name="mustard"   type="known" difficulty="easy" />
		<object name="spam"   type="known" difficulty="easy" />
		<object name="sugar"   type="known" difficulty="easy" />
	</category>	

	<category name="snacks"         defaultLocation="side table" room="living room">
		<object name="pringles"     type="known" difficulty="easy" />
		<object name="crackers"     type="known" difficulty="easy" />
		<object name="cornflakes"  type="alike" difficulty="moderate" />
	</category>

</categories>


